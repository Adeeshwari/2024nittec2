#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int l,b,a,c;
    scanf("%d%d",&l,&b);
    a=l*b;
    c=2*(l+b);
    printf("The required length is %d m\n",c);
    printf("The required area of carpet is %d sqm",a);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
